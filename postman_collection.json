{
    "info": {
        "name": "School Management APIs",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Add School",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"name\": \"Example School\", \"address\": \"123 Main St\", \"latitude\": 40.7128, \"longitude\": -74.0060}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/addSchool",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "addSchool"]
                }
            },
            "response": [
                {
                    "name": "Success",
                    "status": "Created",
                    "code": 201,
                    "body": "{\"message\": \"School added successfully\", \"id\": 1}"
                },
                {
                    "name": "Validation Error",
                    "status": "Bad Request",
                    "code": 400,
                    "body": "{\"error\": \"Name is required\"}"
                }
            ]
        },
        {
            "name": "List Schools",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{baseUrl}}/api/listSchools?latitude=40.7128&longitude=-74.0060",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "listSchools"],
                    "query": [
                        {
                            "key": "latitude",
                            "value": "40.7128"
                        },
                        {
                            "key": "longitude",
                            "value": "-74.0060"
                        }
                    ]
                }
            },
            "response": [
                {
                    "name": "Success",
                    "status": "OK",
                    "code": 200,
                    "body": "[{\"id\": 1, \"name\": \"Example School\", \"address\": \"123 Main St\", \"latitude\": 40.7128, \"longitude\": -74.0060, \"distance\": 0}]"
                },
                {
                    "name": "Validation Error",
                    "status": "Bad Request",
                    "code": 400,
                    "body": "{\"error\": \"Valid latitude is required (-90 to 90)\"}"
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000"
        }
    ]
}